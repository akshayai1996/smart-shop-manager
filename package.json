{
  "name": "shopease-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.akshayai.shopease",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "files": [
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/exe.win-amd64-3.14",
        "to": "extraResources",
        "filter": ["**/*"]
      }
    ]
  },
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0",
    "concurrently": "^8.2.2"
  }
}
